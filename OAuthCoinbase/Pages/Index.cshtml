@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="row">
    <div class="col-md-12">
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-action="Login" asp-controller="Account" class="btn btn-default">Coinbase Login</a>
        }
        else
        {

            <div class="row">
                <div class="col-md-2">
                    <img src="@Model.CoinbaseAvatar" alt="" class="img-thumbnail" />
                </div>
                <div class="col-md-10">
                    <h4>@Model.CoinbaseName</h4>
                    <h4>Accounts</h4>
                    <ul>
                        @foreach (var account in Model.AccountDetails)
                        {
                            <li>Address: @account.Addresses.FirstOrDefault()?.Address
                                Has: @account.Account.Balance.Amount @account.Account.Balance.Currency</li>
                        }
                    </ul>
                </div>
            </div>
            <div class="row">
                <a asp-action="Logout" asp-controller="Account" class="btn btn-default">Logout</a>
            </div>
        }
    </div>
</div>
